{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.2.0"
  },
  "imports": {
    "@supabase/supabase-js": "npm:@supabase/supabase-js@2.57.4",
    "std/": "https://deno.land/std@0.224.0/",
    "http/": "https://deno.land/std@0.224.0/http/"
  },
  "tasks": {
    "dev": "deno run --watch --allow-all index.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
